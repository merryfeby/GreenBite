<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".courier.CourierDetailHistoryFragment">

    <TextView
        android:id="@+id/txtTimeDetailHistory_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Placed 5 min ago"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_20" />

    <View
        android:id="@+id/divider_20"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="#615E5E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCustDetailHistory_courier" />

    <View
        android:id="@+id/divider_21"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="#615E5E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatusDetailHistory_courier" />

    <View
        android:id="@+id/navbarDetailHistory_courier"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#67F06D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitleDetailHistory_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="GreenBite"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtWelcomeDetailHistory_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, {user}"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/txtTitleDetailHistory_courier"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleDetailHistory_courier" />

    <TextView
        android:id="@+id/txtCustDetailHistory_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Merry"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbarDetailHistory_courier" />

    <TextView
        android:id="@+id/txtIdDetailHistory_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="#66EE6C"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtCustDetailHistory_courier" />

    <TextView
        android:id="@+id/txtStatusDetailHistory_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Order is being Cooked"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTimeDetailHistory_courier" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDetailHistory_courier"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_21" />

    <View
        android:id="@+id/detailBackgroundDetailHistory_courier"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="#B6B4B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvDetailHistory_courier" />

    <TextView
        android:id="@+id/tvOrderDetail_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Order details"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/detailBackgroundDetailHistory_courier"
        app:layout_constraintTop_toTopOf="@+id/detailBackgroundDetailHistory_courier" />

    <TextView
        android:id="@+id/tvPlacedDetail_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Placed"
        app:layout_constraintStart_toStartOf="@+id/detailBackgroundDetailHistory_courier"
        app:layout_constraintTop_toBottomOf="@+id/tvOrderDetail_courier" />

    <TextView
        android:id="@+id/tvCustNameDetail_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Customer name"
        app:layout_constraintStart_toStartOf="@+id/detailBackgroundDetailHistory_courier"
        app:layout_constraintTop_toBottomOf="@+id/tvPlacedDetail_courier" />

    <TextView
        android:id="@+id/tvCustPhoneDetail_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Customer phone"
        app:layout_constraintStart_toStartOf="@+id/detailBackgroundDetailHistory_courier"
        app:layout_constraintTop_toBottomOf="@+id/tvCustNameDetail_courier" />

    <View
        android:id="@+id/divider_22"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#474747"
        app:layout_constraintEnd_toEndOf="@id/detailBackgroundDetailHistory_courier"
        app:layout_constraintStart_toStartOf="@+id/detailBackgroundDetailHistory_courier"
        app:layout_constraintTop_toBottomOf="@+id/tvCustPhoneDetail_courier" />

    <TextView
        android:id="@+id/tvSubtotal_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Subtotal"
        app:layout_constraintStart_toStartOf="@+id/detailBackgroundDetailHistory_courier"
        app:layout_constraintTop_toBottomOf="@+id/divider_22" />

    <TextView
        android:id="@+id/txtPlacedDateDetailHistory_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Thu, Apr 15th 2025 1.00pm"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@+id/detailBackgroundDetailHistory_courier"
        app:layout_constraintTop_toTopOf="@+id/tvPlacedDetail_courier" />

    <TextView
        android:id="@+id/txtPhoneDetailHistory_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/detailBackgroundDetailHistory_courier"
        app:layout_constraintTop_toTopOf="@+id/tvCustPhoneDetail_courier" />

    <TextView
        android:id="@+id/txtNameDetailHistory_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/detailBackgroundDetailHistory_courier"
        app:layout_constraintTop_toTopOf="@+id/tvCustNameDetail_courier" />

    <TextView
        android:id="@+id/txtSubtotalDetailHistory_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/detailBackgroundDetailHistory_courier"
        app:layout_constraintTop_toTopOf="@+id/tvSubtotal_courier" />
</androidx.constraintlayout.widget.ConstraintLayout>