<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="220dp"
            android:layout_height="268dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1dp">

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="265dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="@color/white"
                app:cornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageGambar"
                android:layout_width="176dp"
                android:layout_height="143dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toTopOf="@+id/button"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/rvNamaMenu"
                android:layout_width="175dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:text="Strawberry Crush Smoothie"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/imageGambar" />

            <LinearLayout
                android:id="@+id/ratingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/button"
                app:layout_constraintTop_toBottomOf="@id/rvNamaMenu">

            </LinearLayout>

            <TextView
                android:id="@+id/rvHargaMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="36dp"
                android:text="Rp 30.000"
                android:textColor="#33C98B"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/button"
                app:layout_constraintStart_toStartOf="@id/button" />

            <TextView
                android:id="@+id/rvRatingMenu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="120 Ratings"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/rvRatingMenu2"
                app:layout_constraintTop_toTopOf="@+id/rvRatingMenu2" />

            <TextView
                android:id="@+id/rvRatingMenu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="|"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/rvRatingMenu"
                app:layout_constraintTop_toTopOf="@+id/rvRatingMenu" />

            <TextView
                android:id="@+id/rvRatingMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4.8"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="@+id/imageView8" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/star_svgrepo_com"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toBottomOf="@+id/rvNamaMenu" />

            <Button
                android:id="@+id/btnEdit_rvMenuAdmin"
                android:layout_width="106dp"
                android:layout_height="39dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#33C98B"
                android:text="Edit"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/rvHargaMenu"
                app:layout_constraintTop_toBottomOf="@+id/rvRatingMenu3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
